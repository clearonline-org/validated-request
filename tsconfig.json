{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "declaration": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false,
    "strictNullChecks": false,
    "outDir": "compiled",
    "rootDirs": ["src"]
  },
  "compileOnSave": true,
  "include": [
    "src/index.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "__tests__/**/*"
  ]
}
